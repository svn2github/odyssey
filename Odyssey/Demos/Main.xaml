<Window x:Class="Demos.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Odyssey Demos" Height="300" Width="300" Padding="8">
    <DockPanel>
        <TextBlock Text="Odyssey (c) Copyright 2009 Thomas Gerber" Margin="4" DockPanel.Dock="Bottom" HorizontalAlignment="Left"/>

        <StackPanel Margin="8">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="8"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Select Example:"/>
            <Button Click="OutlookClick">OutlookBar</Button>
            <Button Click="ExplorerBarClick">ExplorerBar+Breadcrumbs</Button>
            <Button Click="BreadcrumbBarClick">BreadcrumbBar</Button>
            <Button Click="RibbonBarClick">RibbonBar</Button>
        </StackPanel>
    </DockPanel>
</Window>
